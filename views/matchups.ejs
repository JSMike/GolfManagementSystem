<div>
  <h3 class="text-center">Matchups</h3>
  <div class="container">
    <div class="row">
      <ul>
        <li ng-repeat="matchup in db.matchups track by $index">
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">MATCHUP_ID:</span> <input class="col-xs-10" type='text' ng-model='matchup.MATCHUP_ID' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">WEEK_ID:</span> <input class="col-xs-10" type='text' ng-model='matchup.WEEK_ID' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM1:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM1' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM2:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM2' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM1P1ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM1P1ROUND' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM1P2ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM1P2ROUND' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM2P1ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM2P1ROUND' disabled></p>
          <p ng-show="!db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM2P2ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM2P2ROUND' disabled></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">MATCHUP_ID:</span> <input class="col-xs-10" type='text' ng-model='matchup.MATCHUP_ID'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">WEEK_ID:</span> <input class="col-xs-10" type='text' ng-model='matchup.WEEK_ID'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM1:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM1'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM2:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM2'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM1P1ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM1P1ROUND'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM1P2ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM1P2ROUND'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM2P1ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM2P1ROUND'></p>
          <p ng-show="db.edit.matchups.index[$index]"><span class="col-xs-2">TEAM2P2ROUND:</span> <input class="col-xs-10" type='text' ng-model='matchup.TEAM2P2ROUND'></p>
          <button class="btn btn-default" ng-click="matchupEdit($index, false)" ng-show="!db.edit.matchups.index[$index]">Edit</button>
          <button class="btn btn-success col-xs-2" ng-click="matchupEdit($index, true)" ng-show="db.edit.matchups.index[$index]">Save Changes</button>
          <button class="btn btn-danger col-xs-2" ng-click="matchupEdit($index, false)" ng-show="db.edit.matchups.index[$index]">Cancel</button><br>
        <li>
      </ul>
    </div>
  </div>
</div>
